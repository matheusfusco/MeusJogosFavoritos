<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="96dp"
            android:layout_height="100dp"
            tools:src="@drawable/god_of_war" />

        <LinearLayout
            android:layout_toRightOf="@id/ivFoto"
            android:layout_toLeftOf="@id/ivDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/titulo_god_of_war"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvLancamento"
                android:textColor="#AAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/lancamento" />

            <TextView
                android:id="@+id/tvDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/descr_god_of_war"
                android:maxLines="3"
                android:ellipsize="end"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src = "@drawable/delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>